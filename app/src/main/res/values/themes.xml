<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CourseworkApp" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/dark_background</item> <!-- Background Dark Blue -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#00A3FF</item> <!-- Accent Blue -->
        <item name="colorSurface">#2B2F3A</item> <!-- Card BG -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CourseworkApp" parent="Base.Theme.CourseworkApp" />

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/dark_background</item>
        <item name="titleTextStyle">@style/MyActionBarText</item>
    </style>

    <style name="MyActionBarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>